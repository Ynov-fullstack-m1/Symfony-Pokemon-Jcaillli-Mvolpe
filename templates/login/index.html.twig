{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Login Pokedex{% endblock %}

{% block body %}
    <h1 class="text-center">Login</h1>

    <form action="{{ path('app_login') }}" method="post">
    <div class="card">
        <div class="card-body form">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="_password">
            </div>
        </div>
        <div class="text-center card-footer">
            <input type="hidden" name="_target_path" value="{{ path('app_pokemon_index') }}">

            <button class="btn btn-success btn-lg mr-2" type="submit">login</button>

            <a class="btn btn-warning btn-lg" href="{{ path('app_register') }}">Register</a>
        </div>
    </div>
    </form>
{% endblock %}